{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": false,
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
    ],
  "useBaseBranchConfig": "merge",
  "baseBranches": ["feat/renovate"],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Npm minor/patch updates"
    }
  ]
}
