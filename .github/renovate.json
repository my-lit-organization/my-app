{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": false,
  "extends": [
    "config:best-practices",
    ":disableDependencyDashboard"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "packageRules": [
    {
      "matchManagers": ["npm", "dockerfile"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "minor/patch updates",
      "labels": ["minor/patch {{manager}}"]
    },
    {
      "description": "Do not group major updates",
      "matchManagers": ["npm", "dockerfile"],
      "matchUpdateTypes": ["major"],
      "groupName": null,
      "labels": ["major {{manager}}"]
    }
  ]
}
